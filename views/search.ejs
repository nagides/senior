<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="../assets/css/bootstrap.min.css">
    <!-- <link rel="stylesheet" href="../assets/css/search.css"> -->
    <link rel="stylesheet" href="../assets/css/navbar.css">
    <script src="/public/js/bootstrap.min.js" defer></script>
    <script src="../assets/css/bootstrap.bundle.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="../assets/lib/fusioncharts/js/fusioncharts.js"></script>
    <script src="../assets/lib/fusioncharts/js/themes/fusioncharts.theme.fusion.js"></script>
    <style>
        .img-profile {
            border-radius: 50%;
            width: 35px;
            margin-top: 4rem;
        }
        
    </style>
  </head>
  
  <body>
    <div class="flex-row">
        <div class="nav">
            <div class="sidebar">
                <img src="../assets/images/สัญลักษณ์ประจำมหาวิทยาลัยแม่ฟ้าหลวง.png" width="50,70">
                <p class="text-center" style="color: #A60303">MFU</p>
                <hr>
                <li class="mt-5"> <a href="/dashboard"><i class="bi bi-bar-chart"></i></a> </li>
                <li class="mt-4"><a href="/listcourse"><i class="bi bi-map"></i></a></li>
                <li class="mt-4"><a href="/search"><i class="bi bi-search"></i></a></li>
                <li class="mt-4"><a href="/community"><i class="bi bi-chat"></i></a></li>
                <li class="mt-4"><a href="/bookmark"><i class="bi bi-star"></i></a></li>
                <li class="mt-4"><a href="/notification"><i class="bi bi-bell"></i></a></li>
                <li class="mt-4"><a href="/history"><i class="bi bi-clock-history"></i></li>
                <a class="btn" onclick="logout()">
                    <div id="user-profile"></div>
                </a>
            </div>
        </div>
        <div class="container">
        <h1 class="mt-5" style="color: #A60303;">Search</h1>
      </div>
        <div class="col mt-4" style="background-color: #e7e7e7;">
          <div class="container">
          
      <form action="/search" method="GET" >
        <!-- <div class="container" style="background-color: #e7e7e7;"> -->
          <!-- Course Name and School Dropdown in the Same Row -->
          <div class="row" >
            <div class="col-md-6 mb-2">
              <p>Name Course</p>
              <div class="input-group">
                <input type="text" name="name" class="form-control" value="<%= searchParams.name %>" placeholder="Search for a course">
              </div>
            </div>

            <div class="col-md-6 mb-2">
              <p>School</p>
              <select name="field_of_study" class="form-select">
                <option value="">Select School</option>
                <% dropdownData.field_of_studys.forEach(field_of_study => { %>
                  <option value="<%= field_of_study.field_of_study %>" <%= field_of_study.field_of_study === searchParams.field_of_study ? 'selected' : '' %>><%= field_of_study.field_of_study %></option>
                <% }) %>
              </select>
            </div>
          </div>

          <!-- Course Type and Academic Year Dropdowns in the Same Row -->
          <div class="row">
            <div class="col-md-6 mb-2">
              <p>Course Type</p>
              <select name="type" class="form-select">
                <option value="">Select Course Type</option>
                <% dropdownData.types.forEach(type => { %>
                  <option value="<%= type.type %>" <%= type.type === searchParams.type ? 'selected' : '' %>><%= type.type %></option>
                <% }) %>
              </select>
            </div>

            <div class="col-md-6 mb-2">
              <p>Academic Year</p>
              <select name="academic_year" class="form-select">
                <option value="">Select Academic Year</option>
                <% dropdownData.academicYears.forEach(year => { %>
                  <option value="<%= year.academic_year %>" <%= year.academic_year === searchParams.academic_year ? 'selected' : '' %>><%= year.academic_year %></option>
                <% }) %>
              </select>
            </div>
          </div>

          <!-- Semester Dropdown -->
          <div class="row">
            <div class="col-md-6 mb-2">
              <p>Semester</p>
              <select name="semester" class="form-select">
                <option value="">Select Semester</option>
                <% dropdownData.semesters.forEach(semester => { %>
                  <option value="<%= semester.semester %>" <%= semester.semester === searchParams.semester ? 'selected' : '' %>><%= semester.semester %></option>
                <% }) %>
              </select>
            </div>
          </div>

          <!-- Search Button -->
          <div class="row">
            <div class="col-md-12">
              <input type="submit" class="btn btn-primary" value="Search">
            </div>
          </div>
        </div>
      </form>
    </div>
      <!-- Display Courses After Form Submission -->
      
      <% if (courses && courses.length > 0) { %> <!-- Check if courses exist -->
        <div class="container">
        <table class="table table-striped mt-4">
          <thead>
            <tr>
              <th>Name</th>
              <th>School</th>
              <th>Type</th>
              <th>Academic Year</th>
              <th>Semester</th>
            </tr>
          </thead>
          <tbody>
            <% courses.forEach(course => { %>
              <tr>
                <td><%= course.name %></td>
                <td><%= course.school %></td>
                <td><%= course.type %></td>
                <td><%= course.academic_year %></td>
                <td><%= course.semester %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %> <!-- If no courses are found -->
        <p>No courses found.</p>
      <% } %>
    </div>
    <script src="../assets/css/load-html.js"></script>
    <script> $(document).ready(() => {
        const userinfo = JSON.parse(sessionStorage.getItem('userinfo'));
        console.log(userinfo)
        if (userinfo && userinfo.image) {
            $('#user-profile').html(`
                <img class="img-profile" crossorigin="anonymous" src="${userinfo.image}" alt="User Profile" referrerpolicy="no-referrer" />
            `);
        } else {
            console.log("No user image available");
            $('#user-profile').html(`<p>No profile image available.</p>`);
        }

        get_review_qty();
        get_review_chart();
        
    });


    function logout() {
        fetch('/logout', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json()) // แปลง response เป็น JSON
        .then(data => {
            if (data.redirect) {
                window.location.href = data.redirect; // ใช้ URL ที่ได้รับจาก server
            } else {
                console.error('Logout failed');
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>
</div>
  </body>
</html>
